<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cucc.unicom.mapper.LockUserMapper">
    
    <insert id="addLockUser" parameterType="com.cucc.unicom.pojo.LockUser">
        insert into t_lockuser (user_name) values (userName);
    </insert>
    
    <update id="updateLockUser" parameterType="com.cucc.unicom.pojo.LockUser">
        update t_lockuser
        set failure_num = failure_num + 1
        where user_name  = #{userName}
    </update>
    
    <select id="getLockUser" resultType="com.cucc.unicom.pojo.LockUser">
        select * from t_lockuser
        where user_name = #{userName}
    </select>
    

</mapper>
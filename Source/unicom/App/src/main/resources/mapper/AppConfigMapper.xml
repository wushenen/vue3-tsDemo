<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cucc.unicom.mapper.AppConfigConfigMapper">

    <insert id="addAppConfig">
        insert into t_app_config (app_id,enc_port,enc_type,enc_freq,start_index,end_index)
        values (#{appId},#{encPort},#{encType},#{encFreq},#{startIndex},#{endIndex})
    </insert>

    <select id="appConfigExist">
        select count(1) from t_app_config
        where app_id = #{appId}
    </select>
    
    <select id="getQemsConfig" resultType="com.cucc.unicom.pojo.AppConfig">
        select * from t_app_config a, t_app_device b
        where a.app_id = b.app_id
        and b.device_id = #{deviceId}
    </select>

    <select id="getQemsConfigByAppId" resultType="com.cucc.unicom.pojo.AppConfig">
        select * from t_app_config
        where a.app_id = #{appId}
    </select>

    <update id="updateQemsConfig" parameterType="com.cucc.unicom.controller.vo.UpdateAppConfigRequest">
        update t_app_config
        set config_name = #{configName},
        enc_port = #{encPort},
        enc_type = #{encType},
        enc_freq = #{encFreq},
        start_index = #{startIndex},
        end_index = #{endIndex},
        version = version+1,
        update_time = now()
        where id = #{id}
    </update>



    <insert id="addQemsOperation">
        insert into t_device_operation (device_name,operation)
        values (#{deviceName},#{operation})
    </insert>

    <select id="countQemsOperation" resultType="int">
        select count(*) from t_device_operation
        where device_name = #{deviceName}
    </select>

    <select id="getOperation" resultType="com.cucc.unicom.pojo.DeviceOperation">
        select * from t_device_operation
        where device_name = #{deviceName}
    </select>


    <delete id="delQemsOperation">
        delete from t_device_operation
        where device_name = #{deviceName}
    </delete>
    

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cucc.unicom.mapper.AppMapper">
    
    <insert id="addApp">
        insert into t_app (app_name,app_type,app_key,app_secret,comments)
        values (#{appName},#{appType},#{appKey},#{appSecret},#{comments});
    </insert>

    <select id="appExist" resultType="boolean">
        select count(1) from t_app
        where app_name = #{appName}
    </select>

    <delete id="deleteApp">
        delete from t_app
        where app_id = #{appId}
    </delete>

    <select id="getApps" resultType="com.cucc.unicom.pojo.App">
        select * from t_app
    </select>


</mapper>